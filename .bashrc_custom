# vim set ts=4 sw=4 noet:

export EDITOR=vim
export PYTHONSTARTUP="$HOME/.pyrc"

# use most, instead of more or less. it colorizes output for manpages & such
if [[ -x /usr/bin/most ]]; then export PAGER="/usr/bin/most -s"; fi
if [[ -x /usr/local/bin/most ]]; then export PAGER="/usr/local/bin/most -s"; fi

# helper scripts for running Mocha tests invoked from a Makefile
function tt() { if [ -n "$1" ]; then MOCHA_FLAGS="-g $1" make test; else make test; fi; }
function ttw() { if [ -n "$1" ]; then MOCHA_FLAGS="-g $1" make test-w; else make test-w; fi; }

